<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
      <% if (todos.length){%>
        <% todos.forEach(function(todo,id){%>
          <ul>
            <li><%=todo.todo%> - <%=todo.done?'Done':'Not Done'%>
            <form action="/<%=id%>?_method=DELETE" method="POST">
              <input type="hidden">
              <input type="submit" value="DELETE" >
            </form>
          </li>
            
          </ul>
        <%})%>
        <%}else{%>
          
          <h3>There are no To Dos yet!</h3>
          <%}%>


    <hr>

      <form action="/" method="POST">
        <input type="text" name="todo">
          <input type="submit" value="ADD TO DO" >
      
      </form>


    
  </body>
</html>
